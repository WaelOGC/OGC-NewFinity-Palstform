# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ogc_newfinity

# JWT Configuration
JWT_ACCESS_SECRET=your_access_secret_key_here
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_COOKIE_ACCESS_NAME=ogc_access
JWT_COOKIE_REFRESH_NAME=ogc_refresh

# Server Configuration
PORT=4000
HOST=localhost
NODE_ENV=development

# SMTP Email Configuration (for account activation emails)
# If SMTP variables are not set, emails will be logged to console in development mode
# SMTP_HOST - SMTP server hostname (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST=
# SMTP_PORT - SMTP server port (usually 587 for TLS, 465 for SSL)
SMTP_PORT=
# SMTP_USER - SMTP authentication username (usually your email address)
SMTP_USER=
# SMTP_PASS - SMTP authentication password or app-specific password
SMTP_PASS=
# SMTP_FROM - Email address to send from (e.g., noreply@ogc-newfinity.com)
SMTP_FROM=

# Frontend URL (used for activation links)
FRONTEND_URL=http://localhost:5175

# CORS Configuration (optional)
# CORS_ORIGIN=http://localhost:5175,http://localhost:3000

# Rate Limiting (optional)
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX=120